<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline40"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/screen_rectangle"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.70" />

            <TextView
                android:id="@+id/historyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/doppio_one"
                android:text=""
                android:textColor="@color/gray40"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/guidelineTop" />
            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/doppio_one"
                android:text="0"
                android:textColor="@color/dark_brown"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="@id/historyText"
                app:layout_constraintTop_toBottomOf="@id/historyText"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />
    <View
        android:id="@+id/line"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline40" />
    <!--<View
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/screen_rectangle"
        app:layout_constraintBottom_toTopOf="@id/ac_btn"
        app:layout_constraintTop_toTopOf="parent" />-->







    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ac_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:text="AC"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline40" />

    <ImageButton
        android:id="@+id/delete_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:contentDescription="@string/back_button"
        android:src="@drawable/arrow_left_02"
        app:layout_constraintEnd_toStartOf="@+id/percentage_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ac_btn"
        app:layout_constraintTop_toTopOf="@+id/ac_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/percentage_btn"
        style="@style/calculatorBtn.orange"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="%"
        app:layout_constraintEnd_toStartOf="@+id/divide_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/delete_btn"
        app:layout_constraintTop_toTopOf="@+id/ac_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/divide_btn"
        style="@style/calculatorBtn.orange"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/percentage_btn"
        app:layout_constraintTop_toTopOf="@+id/ac_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num7_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="7"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/ac_btn"
        app:layout_constraintStart_toStartOf="@id/ac_btn"
        app:layout_constraintTop_toBottomOf="@+id/ac_btn"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num8_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="8"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/delete_btn"
        app:layout_constraintStart_toStartOf="@id/delete_btn"
        app:layout_constraintTop_toTopOf="@+id/num7_btn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num9_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="9"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/percentage_btn"
        app:layout_constraintStart_toStartOf="@id/percentage_btn"
        app:layout_constraintTop_toTopOf="@+id/num7_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/multiply_btn"
        style="@style/calculatorBtn.orange"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="x"
        app:layout_constraintEnd_toEndOf="@+id/divide_btn"
        app:layout_constraintStart_toStartOf="@id/divide_btn"
        app:layout_constraintTop_toTopOf="@+id/num7_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num4_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="4"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/num7_btn"
        app:layout_constraintStart_toStartOf="@id/num7_btn"
        app:layout_constraintTop_toBottomOf="@+id/num7_btn"
        android:layout_marginTop="8dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num5_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="5"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/num8_btn"
        app:layout_constraintStart_toStartOf="@id/num8_btn"
        app:layout_constraintTop_toTopOf="@+id/num4_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num6_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="6"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/num9_btn"
        app:layout_constraintStart_toStartOf="@id/num9_btn"
        app:layout_constraintTop_toTopOf="@+id/num4_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plus_btn"
        style="@style/calculatorBtn.orange"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/multiply_btn"
        app:layout_constraintStart_toStartOf="@id/multiply_btn"
        app:layout_constraintTop_toTopOf="@+id/num4_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num1_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="1"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/num4_btn"
        app:layout_constraintStart_toStartOf="@id/num4_btn"
        app:layout_constraintTop_toBottomOf="@+id/num4_btn"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num2_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="2"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/num5_btn"
        app:layout_constraintStart_toStartOf="@id/num5_btn"
        app:layout_constraintTop_toTopOf="@+id/num1_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num3_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="3"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/num6_btn"
        app:layout_constraintStart_toStartOf="@id/num6_btn"
        app:layout_constraintTop_toTopOf="@+id/num1_btn"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minus_btn"
        style="@style/calculatorBtn.orange"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/plus_btn"
        app:layout_constraintStart_toStartOf="@id/plus_btn"
        app:layout_constraintTop_toTopOf="@+id/num1_btn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plus_minus_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Â±"
        app:layout_constraintEnd_toEndOf="@+id/num1_btn"
        app:layout_constraintStart_toStartOf="@id/num1_btn"
        app:layout_constraintTop_toBottomOf="@+id/num1_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dot_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="."
        app:layout_constraintEnd_toEndOf="@+id/num3_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/num3_btn"
        app:layout_constraintTop_toTopOf="@+id/plus_minus_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zero_btn"
        style="@style/calculatorBtn.gray"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="0"
        android:onClick="onNumberClick"
        app:layout_constraintEnd_toEndOf="@+id/num2_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/num2_btn"
        app:layout_constraintTop_toTopOf="@+id/plus_minus_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/equal_btn"
        style="@style/calculatorBtn.orange"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="@+id/minus_btn"
        app:layout_constraintStart_toStartOf="@id/minus_btn"
        app:layout_constraintTop_toTopOf="@+id/plus_minus_btn"
        />
</androidx.constraintlayout.widget.ConstraintLayout>